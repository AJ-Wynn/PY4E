hours = input("Enter Hours: ")
rate = input("Enter Rate: ")

if float(hours) <= 40:
    pay = float(hours) * float(rate)
    print("Pay: ",pay)

else:
    ovt = float(hours) - 40
    pay = 40 * float(rate)
    extra_pay = ovt * (float(rate) * 1.5)
    total_pay = pay + extra_pay
    print("Pay: ",total_pay)

